<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaSemana6_RobinsonSoplin.MainPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="18" CornerRadius="0">
            <Label Text="Ventana de Registro" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="txtCodigo" Placeholder="Ingrese el codigo" Keyboard="Numeric"/>
        <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre"/>
        <Entry x:Name="txtApellido" Placeholder="Ingrese el Apellido"/>
        <Entry x:Name="txtEdad" Placeholder="Ingrese la edad"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


        </Grid>

        <Button x:Name="btnIsertar" Text="Insertar" Clicked="btnIsertar_Clicked" Grid.Row="0" Grid.Column="0" BackgroundColor="Gray" TextColor="White"/>
        <Button x:Name="btnRegresar" Text="Regresar" Clicked="btnRegresar_Clicked" Grid.Row="0" Grid.Column="1" BackgroundColor="Gray" TextColor="White"/>
        


    </StackLayout>

</ContentPage>
